<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-8 col pt-4">
            <h1>Posts </h1>
            <p><%= link_to 'New post', new_post_path, class:'btn btn-sm btn-outline-success' %>
            </p>
            <div class="table-responsive">
                <table class="table table-borderless">
                    <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th class="float-right">Actions</th>
                        </tr>
                    </thead>    
                    <% @posts.each do |post|%>
                    <tbody>
                        <tr>
                            <td><%= link_to post.title, post_path(post) %></td>
                            <td><%= truncate(post.description, length: 80) %></td> <!-- truncate + length pour "..." en cas ou description trop longue-->
                            <td><%= post.image %></td>
                            <td><%= link_to 'Edit', edit_post_path(post), class:"btn btn-outline-primary" %></td>
                            <td><%= link_to 'Show', post_path(post), class:"btn btn-outline-info" %></td>
                            <td><%= link_to 'Delet', post_path(post), method: :delete, class:"btn btn-outline-danger" %></td>
                        </tr>
                    <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
   