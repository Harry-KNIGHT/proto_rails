<h1>Edit<h1>

<% if @post.errors.any? %>
    <h2>Erreurs</h2>

    <% @post.errors.full_messages.each do |msg| %>
        <ul>
            <li> <%= msg %> </li>
        </ul>
    <% end%>

<% end %>
<%= form_for @post do |f|%>

    <p>
        <%= f.label :title %> <br />
        <%= f.text_field :title %>
    </p>
    <p>
       <%= f.label :description %><br />
       <%= f.text_area :description %>
    </p>
     <p>
       <%= f.label :image %><br />
       <%= f.text_field :image %>
    </p>
     <p>
       <%= f.submit %>
    </p>
<% end %>